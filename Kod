import sys
import random
ans = True
while ans:
    question = raw_input("Ask the magic 8 ball a question: (press enter to quit) ")
    answer = random.randint(1,8)
    if question == "":
        sys.exit()
    elif answer == 1:
        print "It is certain"
    elif answer == 2:
        print "Looks good"
    elif answer == 3:
        print "You may rely on it"
    elif answer == 4:
        print "Ask me again later"
    elif answer == 5:
        print "Concentrate and ask again"
    elif answer == 6:
        print "Reply uncertein, try again"
    elif answer == 7:
        print "My answer is no"
    elif answer == 8:
        print "Little bird said no"
